# Default cronjob for OpMon analyzer module
# Runs the historic average model train/update and anomaly finder every three hours.
# Uses default analyzer settings file /etc/opmon/analyzer/settings.yaml


SHELL=/bin/bash
PATH=/usr/local/sbin:/usr/local/bin:/usr/sbin:/usr/bin:/sbin:/bin

# m   h  dom mon dow  user      command
  40 */2  *   *   *   opmon     opmon-analyzer update && opmon-analyzer find
