# Default cronjob for X-Road Metrics Reports module
# Runs xroad-metrics-reports report generation monthly.
# Uses default reports settings file /etc/xroad-metrics/reports/settings.yaml

SHELL=/bin/bash
PATH=/usr/local/sbin:/usr/local/bin:/usr/sbin:/usr/bin:/sbin:/bin

# m   h  dom mon dow  user             command
  1   0   10  *   *   xroad-metrics    xroad-metrics-reports report
